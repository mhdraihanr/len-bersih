@inject NavigationManager NavigationManager

<nav class="len-bersih-navbar">
    <div class="navbar-container">
        <div class="navbar-brand">
            <a href="/#home" class="brand-link">
                <img src="https://lenbersih.len.co.id/assets/img/P_Len%20Industri%202018.png" alt="PT Len Industri"
                    class="brand-logo" />
            </a>
        </div>
        <div class="navbar-nav-container">
            <ul class="navbar-nav @CollapseClass">
                <li class="nav-item">
                    <a class="nav-link" href="/#home" @onclick='() => NavigateToSection("home")'>
                        <span class="nav-text">Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#guide" @onclick='() => NavigateToSection("guide")'>
                        <span class="nav-text">Guide</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#scope" @onclick='() => NavigateToSection("scope")'>
                        <span class="nav-text">Scope</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#about" @onclick='() => NavigateToSection("about")'>
                        <span class="nav-text">About</span>
                    </a>
                </li>
            </ul>
            <div class="navbar-actions">
                <a href="/cek-status" class="btn-status">Cek Status</a>
                <a href="/report" class="btn-report">Laporkan Sekarang</a>
            </div>
            <button class="navbar-toggle" type="button" @onclick="ToggleNavMenu">
                <span class="toggle-line"></span>
                <span class="toggle-line"></span>
                <span class="toggle-line"></span>
            </button>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;

    private string CollapseClass => collapseNavMenu ? "collapse" : "";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void NavigateToSection(string sectionId)
    {
        NavigationManager.NavigateTo($"/#" + sectionId, forceLoad: false);
        collapseNavMenu = true;
    }
}